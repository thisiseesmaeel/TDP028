<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#10A698"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/detailimage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/placeholder_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/detailimage"
        app:cardBackgroundColor="#FF9800"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/detailkviztitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/crimson_text"
                android:text="@string/kviz_title"
                android:textColor="#455A64"
                android:textSize="25sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/detailkviztitle"
                android:id="@+id/detailkvizdesc"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer too a galley of type and scrambled it to make a type specimen book. "
                android:fontFamily="@font/work_sans"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/detailleveltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailkvizdesc"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp"
                android:text="Beginner"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/detailquestionstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailleveltext"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="100dp"
                android:text="10"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/detaillastscoretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailquestions"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="100dp"
                android:text="N/A"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/detaillevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailkvizdesc"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:text="Level"
                android:textColor="#4E342E"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/detailquestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detaillevel"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="4dp"
                android:text="Questions"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/detaillastscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailquestions"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="4dp"
                android:text="Last Score"
                android:textSize="15sp" />


            <Button
                android:id="@+id/detailtakekvizbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detaillastscore"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Take Kviz"
                android:textColor="#3E2723" />





        </RelativeLayout>






    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>